

<section class="tm-sl-head-section tm-sl-section so-panel-section">
    <div class="container">
      <div class="row">

        <div class="col-12">
            <div class="tm-sl-head">
              <div class="row">
                <div class="col-xl-12 col-lg-12">
                  <% if (flash.success) { %>
                    <div class="alert alert-success" role="alert">
                      <strong><%= flash.success %></strong>
                    </div>
                  <% } %>
            
                  <% if (flash.error) { %>
                    <div class="alert alert-warning" role="alert">
                      <strong><%= flash.error %></strong>
                    </div>
                  <% } %>

                  <h1 class="h1"><strong>Add Service Order</strong></h1>

                  <div class="cc-form">
                    
                    <form class="cc-form-self" id="add-service" action="/add-service-code-secret-132321-submit" method="post">
                      
                      <div class="row">
                        <div class="col-12">

                          <div class="form-group">

                           

                            <div class="form-field mt-2">
                              <span >Service Name</span>
                              <input type="text" name="name" id="name" placeholder="Name" class="form-control" required="required">
                            </div>
                            
                            <div class="form-field mt-2">
                              <span>Service Description</span>
                              <textarea name="description" class="form-control" required="required"></textarea>
                            </div>

                            <div class="form-field mt-2">
                              <span >Price</span>
                              <input type="number" min="1" name="amount" id="amount" placeholder="Amount" class="form-control" required="required">
                            </div>

                        
                            
                            <div class="form-group mt-2 text-center">
                              <% if (user) { %>
                              <input type="submit" name="ncLgnFormSubmit" id="NcLgnFormSubmit" class="btn btn-solid-lg btn-blue" value="Create Service Page">
                              <% } else { %>
                                <p>Please login to proceed</p>
                              <% } %>
                            </div>

                          </div>

                        </div>

                      </div>


                    </form>

                  </div>
        
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
</section>
  