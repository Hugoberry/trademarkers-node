<div class="col-md-12" style="margin-bottom:20px;">    
    <h2>View Lead</h2>
        
    <form class="row" action="/njs-admin/manage/leads/edit/<%= lead._id %>" method="post">
        
            <div class="col-md-6">

            <div class="form-group">
                <label>Task Number </label>
                <input type="text" class="form-control" value="<%= lead.task_number %>" placeholder="" name="task_number" disabled>

            </div>

            

            <div class="form-group">
                <label>Word Mark</label>
                <input type="text" class="form-control" value="<%= lead.word_mark %>" name="word_mark" required>
            </div>

            <div class="form-group">
                <label>Trademark Serial Number</label>
                <input type="text" class="form-control" value="<%= lead.trademark_number %>" name="trademark_number" required>
            </div>

            <div class="form-group">
                <label>Trademark Registration Number</label>
                <input type="text" class="form-control" value="<%= lead.trademark_registration_number %>" name="trademark_registration_number" required>
            </div>

            <div class="form-group">
                <label>Trademark Registration Date</label>
                <input type="date" class="form-control" value="<%= lead.trademark_registration_date %>" name="trademark_registration_date" required>
            </div>

            <div class="form-group">
                <label>Trademark Application Date</label>
                <input type="date" class="form-control" value="<%= lead.trademark_application_date %>" name="trademark_application_date" required>
            </div>

            <div class="form-group">
                <label>Trademark Status</label>
                <input type="text" class="form-control" value="<%= lead.trademark_status %>" name="trademark_status" required>
            </div>

            <div class="form-group">
                <label>Trademark Status Date</label>
                <input type="date" class="form-control" value="<%= lead.trademark_status_date %>" name="trademark_status_date" required>
            </div>

            
            

        </div>

        <div class="col-md-6">

            <div class="form-group">
                <label>Lead Status</label>
                <select class="form-control" name="lead_status">
                    <option value="draft" <%= lead.lead_status == 'draft' ? 'selected' : '' %>>Draft</option>
                    <option value="review" <%= lead.lead_status == 'review' ? 'selected' : '' %>>For Review</option>
                    <option value="publish" <%= lead.lead_status == 'publish' ? 'selected' : '' %>>Publish</option>
                </select>
            </div>


            <div class="form-group">
                <label>Applicant Name</label>
                <input type="text" class="form-control" value="<%= lead.applicant_name %>" name="applicant_name" required>
            </div>

            

            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control" value="<%= lead.applicant_address %>" name="applicant_address" required>
            </div>

            <div class="form-group">
                <label>Postal Code</label>
                <input type="text" class="form-control" value="<%= lead.applicant_postal %>" name="applicant_postal" required>
            </div>

            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" value="<%= lead.applicant_city %>" name="applicant_city" required>
            </div>

            <div class="form-group">
                <label>Country</label>
                <input type="text" class="form-control" value="<%= lead.applicant_country %>" name="applicant_country" required>
            </div>

            <div class="form-group">
                <label>Trademark Class(es)</label>
                <input type="text" class="form-control" value="<%= lead.trademark_class %>" name="trademark_class" required>
            </div>

            <div class="form-group">
                <label>Applicant Email</label>
                <input type="text" class="form-control" value="<%= lead.applicant_email %>" name="applicant_email" required>
            </div>
            
        </div>

        <div class="col-md-12">
            <p class="text-center">
                <button type="submit" class="btn btn-primary btn-rounded-primary" style="padding-left:40px;padding-right:40px;">Update Lead</button>
            </p>
        </div>

    </form>


</div>
        