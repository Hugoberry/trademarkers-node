

<div class="container">
    <div class="row justify-content-center align-items-center box-bg-container">

		<div class="col-md-12">
					
			<h2>Contact us </h2>

		</div>

        <div class="col-md-12">
			
			<% if (flash.success) { %>
			<div class="alert alert-success" role="alert">
				<strong><%= flash.success %></strong>
			</div>
			<% } %>

			<% if (flash.error) { %>
				<div class="alert alert-warning" role="alert">
					<strong><%= flash.error %></strong>
				</div>
			<% } %>
                    
			<form id="contact-form" class="custom-frm" action="" method="POST">
				
				<div class="form-group">
					<input type="name" class="form-control" id="name" value="" placeholder="Name" required name="name">
                </div>
                
				<div class="form-group">
					<input type="email" class="form-control" value="" placeholder="Email" id="email" name="email" required>
                </div>
                <div class="form-group" style="display:none">
					<input type="text" class="form-control" id="email_confirm" value="" placeholder="Confirm Email"  name="email_confirm">
				</div>
				<div class="form-group">
					<input type="text"  class="form-control" value="" id="phone" placeholder="Phone No." name="phone" >
                </div>
                <div class="form-group">
					<select class="form-control" name="inquiry" id="inquiry" required>
                        <option>-- Select Type of Inquiry --</option>
                        <option value="Trademark Registration">Trademark Registration</option>
                        <option value="Trademark Study">Trademark Study</option>
                        <option value="Our Services">Our Services</option>
                        <option value="Others">Others</option>
                    </select>
				</div>
				<div class="form-group" id="messageContainer">
					
				</div>
				<p class="text-center">
					<button id="contact-btn-submit" type="submit" class="btn btn-primary btn-rounded-primary" style="padding-left:40px;padding-right:40px;">Submit</button>
				</p>
			
			</form>

               
        </div>
    </div>
</div>