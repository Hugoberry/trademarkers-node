	<div class="container" style="max-width:550px;">
		<div class="row justify-content-center box-bg-container">
			<div class="col-md-12">

				<div style="max-width:400px;margin:auto;padding-bottom:20px;">
					<h2>Reset Password</h2>

					<% if (flash.error) { %>
						<div class="alert alert-warning" role="alert">
							<strong><%= flash.error %></strong>
						</div>
					<% } %>

					<% if (flash.success) { %>
						<div class="alert alert-success" role="alert">
							<strong><%= flash.success %></strong>
						</div>
					<% } %>

					<form method="POST" action="">
						<div class="form-group">
							<!-- <label for="email">E-Mail Address</label> -->
							<input type="email" class="form-control" name="email" placeholder="E-Mail Address" required autofocus>
						</div>
						
				

						<div class="form-group mb-0">
							<div class="col-md-12 ">
								<button type="submit" class="btn btn-primary btn-rounded-primary" style="padding-left:40px;padding-right:40px;">
									Reset
								</button>

							</div>
						</div>
					</form>

				</div>
			</div>

		</div>
		   
	</div>