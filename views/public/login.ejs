	<div class="container" style="max-width:550px;">
		<div class="row justify-content-center box-bg-container">
			<div class="col-md-12">

				<div style="max-width:400px;margin:auto;padding-bottom:20px;">
					<h2>Client Log-in</h2>

					<% if (flash.error) { %>
						<div class="alert alert-warning" role="alert">
							<strong><%= flash.error %></strong>
						</div>
					<% } %>

					<div class="alert alert-warning" role="alert" style="display:none">
						<strong><%= flash.error %></strong>
					</div>
					<form id="login-from" class="custom-frm" method="POST" action="/login">
						<div class="form-group row">
							<!-- <label for="email">E-Mail Address</label> -->
							<input id="username" type="text" class="form-control" name="username" placeholder="E-Mail Address" value="" required autofocus>
						</div>
						
						<div class="form-group row">
							<!-- <label for="password">Password</label> -->
							<input id="password" type="password" class="form-control" name="password" placeholder="Password" required>
						</div>

						<div class="form-group row mb-0">
							<div class="col-md-12 ">
								<button type="submit" class="btn btn-primary btn-rounded-primary" style="padding-left:40px;padding-right:40px;">
									Login
								</button>

								<p style="display: inline;padding-left:10px">Don't have an account yet? 
								<a style="color:#000;" href="/register">
									Sign Up
								</a></p>
							</div>
						</div>
					</form>

				</div>
			</div>
			<br>
			<div class="form-box" style="text-align: center; height: 60px; display:none">
				<div class="">
					<h5 style="margin:0;color:#000;">New to Trademarkers? <a href="/register">Create an account</a></h5>
				</div>
				
			</div>
		</div>
		   
	</div>