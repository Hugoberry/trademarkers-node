<div class="container">
	<div class="row justify-content-center box-bg-container">
		<div class="col-md-12">
		
			<h2>Customer Profile</h2>

			<form id="addToCart" method="POST" action="/validate-order">
				<div class="form-group guest-form row">
					<div class="col-6 text-center">
						<input class="" type="hidden" name="action" value="notLogin">
                        <input class="" type="hidden" name="logoName" value="<%= data.logoName %>">
                        <input class="" type="hidden" name="logo_pic" value="<%= data.logo_pic %>">
						<input class="" type="hidden" name="countryId" value="<%= data.countryId %>">
						<input class="" type="hidden" name="serviceType" value="<%= data.serviceType %>">
						<input class="" type="hidden" name="type" value="<%= data.type %>">
                        <input class="" type="hidden" name="word_mark" value="<%= data.word_mark %>">
                        <input class="" type="hidden" name="colorClaim" value="<%= data.colorClaim %>">
                        <input class="" type="hidden" name="colorClaimText" value="<%= data.colorClaimText %>">
                        
						<input class="" type="hidden" name="commerce" value="<%= data.commerce %>">
						<input class="" type="hidden" name="filed" value="<%= data.filed %>">
						<input class="" type="hidden" name="priority" value="<%= data.priority %>">
						<input class="" type="hidden" name="origin" value="<%= data.origin %>">
						<input class="" type="hidden" name="originDate" value="<%= data.originDate %>">
						<input class="" type="hidden" name="originTm" value="<%= data.originTm %>">
						
						<% if( Array.isArray(data.class) ) { 
                            for (let i=0; i < data.class.length; i++) { %>
							<input class="" type="hidden" name="class" value="<%= data.class[i] %>">
							<input class="" type="hidden" name="description" value="<%= data.description[i] %>">
                            <% } %> 
                        <% } else { %> 
                                <input class="" type="hidden" name="class" value="<%= data.class %>">
							    <input class="" type="hidden" name="description" value="<%= data.description %>">
                        <% } %>

						<div id="nature_block" class="col-md-6">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Nature </span>
                            <div class="col-md-12">
                                <% if (trademarkStore) { %>
                                    <select id="nature" name="nature" class="form-control">
                                        <option value="Individual" <%= trademarkStore.applicants[0].legal != "Legal entity" ? "selected":"" %>> Individual</option>
                                        <option value="Company" <%= trademarkStore.applicants[0].legal == "Legal entity" ? "selected":"" %>> Company</option>
                                    </select>
                                <% } else { %>
                                    <select id="nature" name="nature" class="form-control">
                                        <option value="Individual" <%= (user ? (user.nature == "Individual" ? "selected":"") : "") %>> Individual</option>
                                        <option value="Company" <%= (user ? (user.nature == "Company" ? "selected":"") : "") %>> Company</option>
                                    </select>
                                <% } %>
								
                            </div>
                        </div>
						</div>
                    </div>


                    <div id="company_block" class="col-md-6">
                        <div class="form-group row <%= trademarkStore && trademarkStore.applicants[0].legal != "Legal entity" ? 'hideBlock' : ''%>" >
                            <span style="padding-left: 15px;"> Company Name </span>
                            <div class="col-md-12">
                                <input id="company" type="text" class="form-control" name="company" value="<%= ( user ? (user.company) : (trademarkStore ? trademarkStore.applicants[0].orga : '' ) ) %>"  >
                            </div>
                        </div>
                    </div>

                    <!-- Company ADDRESS INFORMATION HERE -->
                    <div id="wrap-company-address" class="col-md-12 <%= trademarkStore && trademarkStore.applicants[0].legal != "Legal entity" ? 'hideBlock' : ''%>" ><div class="row">

                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4>Company Address Information</h4>
                            </div>
                        </div>
                    </div>

                    <div id="country_block" class="col-md-12">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Country </span>
                            <div class="col-md-12">
								<select id="country" name="companyCountry" class="form-control">
									<option value="">-</option>
                                    <% countries.forEach(country => { %>
                                        <% if(country.name) { %>
                                        <option value="<%= country.name %>" <%= (user ? (user.country == country.name ? "selected" : "") : (trademarkStore && trademarkStore.applicants[0].address.countryCode == (country.abbr + 'country') ? 'selected' : '' )) %>> <%= country.name %></option>
                                        <% } %>
                                    <% }) %>
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Address </span>
                            <div class="col-md-12">
                                <input type="text" class="form-control" name="companyStreet" value="<%= (user ? user.street : (trademarkStore ? trademarkStore.applicants[0].address.street : '') ) %>">
                            </div>
                        </div>
                    </div>

                    <div id="city-block" class="col-md-2">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> <label id="city-label">City</label> </span>
                            <div class="col-md-12">
                                <input id="city" type="text" class="form-control" name="companyCity" value="<%= (user ? user.city : (trademarkStore ? trademarkStore.applicants[0].address.city : '')) %>">
                            </div>
                        </div>
                    </div>

                    <div id="state-province-block" class="col-md-5">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> <label id="state-label">State/Province</label> </span>
                            <div class="col-md-12">
                                <input id="state" type="text" class="form-control" name="companyState" value="<%= (user ? user.state : (trademarkStore ? trademarkStore.applicants[0].address.state : '') ) %>">
                            </div>
                        </div>
                    </div>

                    <div id="postal-block" class="col-md-5">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> <label id="postal-label">Postal Code</label></span>
                            <div class="col-md-12">
                                <input id="zip_code" type="text" pattern="[0-9]*" class="form-control" name="companyZipCode" value="<%= (user ? user.zipCode : (trademarkStore ? trademarkStore.applicants[0].address.postcode : '') ) %>" >
                            </div>
                        </div>
                    </div>

                    </div></div>

                    <!-- Company ADDRESS INFORMATION HERE -->

                    <!-- START WRAP NAME INFO -->
                    <div id="wrap-name-info" class="col-md-12"><div class="row">
                            
                    <!-- NATURE INFORMATION HERE -->
                    <div id="nature-label" class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4><%= trademarkStore && trademarkStore.applicants[0].legal != "Legal entity" ? 'Client Information' : 'Contact Person' %></h4>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> First Name </span>
                            <div class="col-md-12">
                                <input id="first_name" type="text" class="form-control" name="fname" value="<%= (user ? user.firstName : (trademarkStore && trademarkStore.representatives[0] ? trademarkStore.representatives[0].firstName : '') ) %>" >
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Last Name </span>
                            <div class="col-md-12">
                                <input id="name" type="text" class="form-control" name="lname" value="<%= (user ? user.lastName : (trademarkStore ? trademarkStore.representatives[0].lastName : '') ) %>" >
                            </div>
                        </div>
                    </div>

                    

                    <div class="col-md-4">
                        <div class="form-group row">
                            <span style="padding-left: 15px;">Email Address <b class="asterisk">*</b></span>
                            <div class="col-md-12">
                                <input id="email" type="text" class="form-control" name="email" value="<%= (user ? user.email : (trademarkStore ? trademarkStore.representatives[0].contactInfo.email[0] : '') ) %>" 
                                required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Nationality </span>
                            <div class="col-md-12">
                                <input id="name" type="text" class="form-control" name="nationality" value="<%= (user ? user.nationality : (trademarkStore ? trademarkStore.representatives[0].nationality : '') ) %>" >
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Phone Number</span>
                            <div class="col-md-12">
                                <input id="phone" type="text" class="form-control" name="phone" pattern="[0-9]*" value="<%= (user ? user.phone : '' ) %>">
                            </div>
                        </div>
                    </div>

                    <div id="fax-block" class="col-md-4">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Fax</span>
                            <div class="col-md-12">
                                <input id="fax" type="text" class="form-control" name="fax" pattern="[0-9]*" value="<%= (user ? user.fax : "") %>" >
                            </div>
                        </div>
                    </div>

                    <div id="position-block" style="display:none" class="col-md-3">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Position</span>
                            <div class="col-md-12">
                                <input id="position" type="text" class="form-control" name="position" value="<%= (user ? user.position : "") %>" >
                            </div>
                        </div>
                    </div>

                    </div></div><!-- END WRAP NAME INFO -->

                    

                    

                    

               
                    
                    <!-- ADDRESS INFORMATION HERE -->
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4>Address Information</h4>
                            </div>
                        </div>
                    </div>

                    <div id="country_block" class="col-md-12">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Country </span>
                            <div class="col-md-12">
								<select id="country" name="repCountry" class="form-control">
									<option value="">-</option>
                                    <% countries.forEach(country => { %>
                                        <% if(country.name) { %>
                                        <option value="<%= country.name %>" <%= (user ? (user.country == country.name ? "selected" : "") : (trademarkStore && trademarkStore.representatives[0].address.countryCode == (country.abbr + 'country') ? 'selected' : '' ) ) %>> <%= country.name %></option>
                                        <% } %>
                                    <% }) %>
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> Address </span>
                            <div class="col-md-12">
                                <input type="text" class="form-control" name="repStreet" value="<%= (user ? user.street : (trademarkStore ? trademarkStore.representatives[0].address.street : '') ) %>">
                            </div>
                        </div>
                    </div>

                    <div id="city-block" class="col-md-2">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> <label id="city-label">City</label> </span>
                            <div class="col-md-12">
                                <input id="city" type="text" class="form-control" name="repCity" value="<%= (user ? user.city : (trademarkStore ? trademarkStore.representatives[0].address.city : '') ) %>">
                            </div>
                        </div>
                    </div>

                    <div id="state-province-block" class="col-md-5">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> <label id="state-label">State/Province</label> </span>
                            <div class="col-md-12">
                                <input id="state" type="text" class="form-control" name="repState" value="<%= (user ? user.state : (trademarkStore ? trademarkStore.representatives[0].address.state : '')) %>">
                            </div>
                        </div>
                    </div>

                    <div id="postal-block" class="col-md-5">
                        <div class="form-group row">
                            <span style="padding-left: 15px;"> <label id="postal-label">Postal Code</label></span>
                            <div class="col-md-12">
                                <input id="zip_code" type="text" class="form-control" name="repZipCode" value="<%= (user ? user.zipCode : (trademarkStore ? trademarkStore.representatives[0].address.postcode : '') ) %>" >
                            </div>
                        </div>
                    </div>

				
				</div>

				<div class="col-md-12">
                    <div class="form-group row mb-0">
                    
                        <button type="submit" class="btn btn-primary btn-rounded-primary btn-save-profile" style="margin:auto">
                            proceed
                        </button>
                    </div>
                </div>
			</form>
	
			
		</div>


	</div>
</div>